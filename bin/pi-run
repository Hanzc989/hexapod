#!/bin/bash
set -e

cd $(git rev-parse --show-toplevel)
USER=root
HOST=hexapod
TMP=/tmp/bot
DEST=/root/bot
PKG=$1
shift

echo
echo "# building"
GOARCH=arm GOOS=linux go build -v -o $TMP $PKG || exit 1

echo
echo "# waiting"
ping -o $HOST >/dev/null

echo
echo "# deploying"
rsync -p $TMP $USER@$HOST:$DEST || exit 1
rm $TMP

echo
echo "# running"
ssh -t $USER@$HOST "$DEST --port=/dev/ttyACM0 $@" || exit 1
