#!/bin/bash -ex
cd $(cd `dirname "$0"`; cd ..; pwd)

USER=root
HOST="hexapod.local"
TMP=/tmp/bot
DEST=/root/bot

if [ $# != "1" ]; then
  echo "Usage: $0 PACKAGE"
  exit 1
fi

PKG=$1
shift

echo
echo "# building"
GOARCH=arm GOOS=linux go build -o $TMP $PKG || exit 1

echo
echo "# deploying"
rsync -p $TMP $USER@$HOST:$DEST || exit 1
rm $TMP

echo
echo "# restarting"
ssh -t $USER@$HOST "systemctl restart bot" || exit 1
